<Window x:Class="CodeCoverageAnalyserWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeCoverageAnalyserWpf"
        mc:Ignorable="d"
        Title="Code coverage analyzer: 0/0 blocks covered: 0.00%" Height="450" Width="1000" WindowStartupLocation="CenterScreen" FontFamily="Palatino Linotype">
   
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="MenuOpen_Click"/>
                <MenuItem Header="_Clear" Click="MenuClear_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main Layout Grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="270"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Tree View -->
            <TreeView x:Name="FileTreeView" Grid.Column="0" SelectedItemChanged="FileTreeView_SelectedItemChanged"/>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="Black" Margin="1,0,1,0"/>
            <!-- Code Viewer -->
            <ScrollViewer Grid.Column="2" Background="White">
                <Grid>
                    <TextBlock x:Name="ColumnDisplay" FontSize="14" Foreground="Gray" TextAlignment="Left" Style="{DynamicResource CodeTextStyle}" />
                    <TextBlock x:Name="CodeDisplay" FontSize="14" TextWrapping="Wrap" Padding="50,0,0,0" Style="{DynamicResource LineNumberTextStyle}"/>
                </Grid>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>
